<body style="background-color: rgb(152, 234, 237);">
<nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <a class="navbar-brand">FPT Book</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/">Home</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="mt-4">
        <div class="row">                 
            <div class="card" style="align-items: center; background-color: rgba(146, 207, 231, 0.288)">
                <div class="img-infor">
                    <img src="{{products.picURL}}" class="card-img-bot" style="width: 11rem; height: 14rem;" alt="..."> 
                </div>
                <div>
                    <h2>Name:  {{products.name}}</h2>
                    <p>Author: {{products.author}}</p>
                    <p>Price: {{products.price}}$</p>
                    <p>Description: {{products.description}} </p>
                    <p>Available: <span>In stock</span></p>
                    <p>Shipping fee: <span>10$</span></p>
                </div>
                <form action="/buy" method="post">
                    <input type="hidden" name="txtId" value="{{products._id}}">
                    <button type="submit" class="btn btn-outline-success">Add to Cart</button>
                </form>
                <form action="/customer/feedback" method="post">
                    <div class="formdanhgia">
                    <input type="hidden" name="name" value="{{products.name}}">
                        <div class="form-control">
                            <textarea type="text" class="txtComment w-100" name="feedback" placeholder="Write a feedback here"></textarea>
                        </div>
                        <div class="btn nutguibl" >
                            {{!-- <input type="submit" value="Submit"> --}}
                            <button type="submit" class="btn btn-outline-success">Submit</button>
                        </div>
                        <a href="/customer/feedback?name={{products.name}}">View feedback</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
